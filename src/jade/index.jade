doctype html
html
  head
    title Diary Generator
     
    
    link(rel='stylesheet', href='modules/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='modules/pickadate/lib/themes/classic.css')
    link(rel='stylesheet', href='modules/pickadate/lib/themes/classic.date.css')
    link(rel='stylesheet', href='css/main.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body
    .progress-top.complete-0
      ul
        li
          div
            span 1. Year
        li
          div
            span 2. Beginning and End
        li
          div
            span 3. Dates and Quotes
      .bar
        .status
          
    .container#main
      .row.stage.year.visible
        .title 
          h2 1. Select the Year
          p
            | Which year is this diary for?
        .row
          .col-md-3
            select.yearSelect.form-control
              option(value='2013') 2013/14
              option(value='2014') 2014/15
              option(value='2015') 2015/16
              option(value='2016') 2016/17
              option(value='2017') 2017/18
      .row.stage.beginning
        .title 
          h2 2. Select Beginning and End
          p
            | Select dates when school starts and ends
        .row
          .col-md-6
            label(for='dateStart') Start of school
            input#dateStart.form-control(type='text')
          .col-md-6
            label(for='dateStart') End of school
            input#dateEnd.form-control(type='text')
      
      .row.stage.dates
        .title 
          h2 3. Select Holidays, Week types and Quotes
          p
            | Click the days and add information such as holidays, week types etc.
        .row
          .col-md-6
            h2 Calendar
        .row
          .col-md-8.col-md-offset-2
            .table-responsive
              table.table.table-hover
                thead
                  tr
                    th  Week
                    th  Mon
                    th  Tue
                    th  Wed
                    th  Thu
                    th  Fri
                tbody.calendar
                  tr
                    td
                    td
                    td
                    td
                    td
                    td

    script(src='modules/jquery/dist/jquery.min.js')
    script(src='modules/pickadate/lib/compressed/picker.js')
    script(src='modules/pickadate/lib/compressed/picker.date.js')
    script(src='modules/bootstrap/dist/js/bootstrap.min.js')
    script(src='js/main.js')
